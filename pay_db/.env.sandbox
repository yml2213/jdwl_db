# 沙箱环境配置文件
# 用于沙箱测试环境的专用配置

# 服务器配置
NODE_ENV=test
PORT=3000
HOST=localhost

# 支付环境设置
PAYMENT_ENV=sandbox

# 沙箱支付宝应用配置
ALIPAY_SANDBOX_APP_ID=9021000122671080
ALIPAY_SANDBOX_PRIVATE_KEY_PATH=./keys/sandbox_private_key.pem
ALIPAY_SANDBOX_PUBLIC_KEY_PATH=./keys/sandbox_public_key.pem

# 沙箱网关地址
ALIPAY_GATEWAY_URL=https://openapi-sandbox.alipay.com/gateway.do

# 沙箱回调地址
SANDBOX_NOTIFY_URL=http://localhost:3000/alipay/notify
SANDBOX_RETURN_URL=http://localhost:3000/alipay/return

# 测试配置
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=3
CLEANUP_AFTER_TEST=true

# 日志配置
LOG_LEVEL=debug
LOG_FILE=./logs/sandbox.log