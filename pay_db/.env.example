# 服务器配置
NODE_ENV=development
PORT=3000
HOST=localhost

# 支付宝应用配置
ALIPAY_APP_ID=your_app_id_here
ALIPAY_PRIVATE_KEY_PATH=./keys/app_private_key.pem
ALIPAY_PUBLIC_KEY_PATH=./keys/alipay_public_key.pem

# 环境配置
PAYMENT_ENV=sandbox

# 回调地址配置
NOTIFY_URL=http://localhost:3000/alipay/notify
RETURN_URL=http://localhost:3000/alipay/return

# 支付宝网关地址（沙箱环境）
ALIPAY_GATEWAY_URL=https://openapi-sandbox.alipay.com/gateway.do

# 订阅价格（单位：元）
SUBSCRIPTION_AMOUNT=300